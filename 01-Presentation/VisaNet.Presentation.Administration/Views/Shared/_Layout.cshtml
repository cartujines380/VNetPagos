@using System.Configuration
@using System.Diagnostics
@using System.Reflection
@using System.Web.Optimization
@using VisaNet.Presentation.Administration.Controllers
@using VisaNet.Presentation.Administration.Constants

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/favicon.ico")" />

    <title>VisaNet - Administrador - Portal Pagos</title>
    @Styles.Render("~/Content/css/styles")
    @Styles.Render("~/Content/font-awesome/css/style")
    @Styles.Render("~/Scripts/CKEditor/styles")
    @Styles.Render("~/Scripts/CKEditor/skins/moono/styles")

    @Scripts.Render("~/Scripts/files")
    @Scripts.Render("~/Scripts/js/files")
    @Scripts.Render("~/Scripts/CKEditor/scripts")
    @Scripts.Render("~/Scripts/CKEditor/lang/scripts")
    @Scripts.Render("~/Scripts/CKEditor/plugins/imageUpload/scripts")
    <link href="~/Content/font-awesome/css/font-awesome-animation.css" rel="stylesheet" />
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            connectNotificationHub();
        });
        function connectNotificationHub() {
            var notification = $.connection.notificationHub;
            var userIdForHub = "@Session[SessionConstants.CURRENT_SYS_USER_ID]";
            $.connection.hub.qs = { "userId": userIdForHub };

            notification.client.notify = function (message, type) {
                ShowNotification("", message, type.toLowerCase());
            };
            $.connection.hub.start();
        }
    </script>
</head>

<body>
    @Html.Partial("_Notifications")
    <div id="wrapper">

        <!-- Sidebar -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @{ string version = FileVersionInfo.GetVersionInfo(Assembly.GetAssembly(typeof(ServiceCategoryController)).Location).FileVersion.Substring(0, 5); }
                <a class="navbar-brand" href="#" style="width: 225px">VISANET <span style="font-size: 11px;margin-left: 3px">v. @version</span></a>
            </div>

            @Html.Partial("_Menu")
        </nav>

        <div id="page-wrapper">

            @RenderBody()

        </div><!-- /#page-wrapper -->

    </div><!-- /#wrapper -->
    @Html.Partial("_LoaderFullScreen")
    @RenderSection("Scripts", false)
    <div id="divBlockUi">
        Espere por favor
    </div>
</body>
</html>
