@using VisaNet.Common.Resource.Presentation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model VisaNet.Presentation.Administration.Models.CustomerSiteSystemUserModel

<h2>Portal de Comercio - Nuevo Usuario</h2>

@using (Html.BeginForm("Create", "CustomerSiteSystemUser", FormMethod.Post, new { enctype = "multipart/form-data", autocomplete = "off" }))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-6">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(b => b.Email, new {@class = "obligatoryField"}) *
                        @Html.TextBoxFor(b => b.Email, new {@class = "form-control"})
                    </div>
                    @Html.ValidationMessageFor(s => s.Email)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(b => b.UserType, new {@class = "obligatoryField"}) *
                        @Html.DropDownListFor(s => s.UserType, (ICollection<SelectListItem>) ViewBag.SystemUserTypeList, new {@class = "form-control"})
                    </div>
                    @Html.ValidationMessageFor(s => s.UserType)
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(s => s.CommerceId, new {@class = "obligatoryField"}) *
                        <div class="selectMask w100 selectMultiple" id="commerceDivId">
                            @Html.DropDownListFor(m => m.CommerceId, (IEnumerable<SelectListItem>) ViewBag.CommercesLigthList,
                                new {@class = "form-control"})
                        </div>
                        @Html.ValidationMessageFor(s => s.CommerceId)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(s => s.Name)
                        @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(s => s.Name)
                </div>
           
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(s => s.Surname)
                        @Html.TextBoxFor(s => s.Surname, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(s => s.Surname)
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(s => s.PhoneNumber)
                        @Html.TextBoxFor(s => s.PhoneNumber, new {@class = "form-control"})
                    </div>
                    @Html.ValidationMessageFor(s => s.PhoneNumber)
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.CheckBoxFor(s => s.SendEmailActivation)
                        @Html.LabelFor(s => s.SendEmailActivation, new { @class = "obligatoryField" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <a href="@Url.Action("Index", "CustomerSiteSystemUser")" class="btn btn-default btn-cancel">@PresentationAdminStrings.Cancel </a>
                    <a href="#" id="btnGuardar" class="btn btn-default lbApprove">
                        <strong>@PresentationAdminStrings.Save</strong>
                    </a>
                </div>
            </div>
        </div>
    </div>
}


<script type="text/javascript">
    $(document).ready(function () {
        $("a.lbApprove").click(function () {
            $(this).parents("form").submit();
        });
    });
</script>