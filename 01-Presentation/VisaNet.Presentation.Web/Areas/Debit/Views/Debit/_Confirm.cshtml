@using VisaNet.Common.Resource.Presentation

@model VisaNet.Presentation.Web.Areas.Debit.Models.DebitModel

<div id="lbConfirmPayment" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <div class="row">
                        <div class="col-xs-5">
                            <a class="brandVisaNet fLeft" href="/"> </a>
                        </div>
                        <div class="col-xs-6"><a class="brandVisa fRight"></a></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="modal-body">
                <h4 class="modal-title">@PresentationWebStrings.Service_Step3_Confirmation</h4>
                    <h4>@PresentationWebStrings.Service_Step3_Confirmation <span> @Model.CommerceModel.Name </span> para debito.</h4>
                    <p>@PresentationWebStrings.Service_Step3_Confirmation_Question</p>
                </div>
                <div class="modal-footer">
                    <div class="row">
                        <div class="col-xs-6 p5r">
                            <button type="button" class="btn btn-default btn-cancelar w100" data-dismiss="modal">@PresentationWebStrings.Cancel <i class="icon-remove"></i></button>
                        </div>
                        <div class="col-xs-6 p5l">
                            <button id="btnConfirm" type="button" class="btn btn-default btn-siguiente w100">@PresentationWebStrings.Add <i class="icon-chevron-sign-right"></i></button>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
