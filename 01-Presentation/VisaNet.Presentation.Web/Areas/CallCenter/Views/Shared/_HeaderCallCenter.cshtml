@using VisaNet.Common.Resource.Presentation
@using VisaNet.Domain.EntitiesDtos
@using VisaNet.Presentation.Web.Constants

<div class="callCenterHeader">
    <div class="header p15t p5b">
        <div class="container">
            <div class="row">
                <div class="col-md-6"><a class="brandVisaCallCenter fLeft"></a> </div>
                @if (Session[SessionConstants.CURRENT_SELECTED_USER] != null)
                {
                    <div class="col-md-6">
                        <div class="col-md-10">
                            @{
                                var selectedUser = (ApplicationUserDto)Session[SessionConstants.CURRENT_SELECTED_USER];
                            }
                            <ul class="userInformation fRight">
                                <li><span>@PresentationCallCenterStrings.Header_User:</span> @selectedUser.Name @selectedUser.Surname</li>
                                <li><span>@PresentationCallCenterStrings.Header_Email:</span> @selectedUser.Email</li>
                                <li><span>@PresentationCallCenterStrings.Header_PhoneNumber: </span> @selectedUser.PhoneNumber</li>
                            </ul>
                        </div>
                        <div class="col-md-2">
                            <a href="@Url.Action("LogOffUser", "CallCenterDashboard", new { area = "CallCenter" })" class="btn btn-default btn-navBarCallCenter mt5 w100"> @PresentationWebStrings.Exit <i class="icon-signout"></i></a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
    <div class="navigationCallCenterBar callCenterBack">
        <div class="container">
            <div class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            @if (Session[SessionConstants.CURRENT_SELECTED_USER] != null)
                            {
                                <li><a href="@Url.Action("Index", "Dashboard", new {area = "Private"})">@PresentationCallCenterStrings.Header_PublicSyte</a></li>
                            }
                            @if (Session[SessionConstants.CURRENT_CALLCENTER_USER] != null)
                            {
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@PresentationCallCenterStrings.Header_CallCenter <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Index", "CallCenterDashboard", new {area = "CallCenter"})"><i class="icon-angle-right"></i> @PresentationCallCenterStrings.Header_Dashboard</a></li>
                                        @if (Session[SessionConstants.CURRENT_SELECTED_USER] != null)
                                        {
                                            <li class="divider"></li>
                                            <li><a href="@Url.Action("Index", "Log", new { area = "CallCenter" })"><i class="icon-angle-right"></i> @PresentationCallCenterStrings.Header_AuditLog</a></li>
                                        }
                                    </ul>
                                </li>
                            }
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                                @if (Session[SessionConstants.CURRENT_CALLCENTER_USER] != null)
                                {
                                    <li class="ml5 mr5 userName">
                                        @{
                                    var user = (SystemUserDto)Session[SessionConstants.CURRENT_CALLCENTER_USER];
                                        <h4><span class="mr10">@PresentationCallCenterStrings.Header_CallCenterUser:</span> @user.LDAPUserName</h4>
                                        }
                                    </li>
                                    <li class="ml5 mr5">
                                        <a href="@Url.Action("LogOff", "CallCenterAccount", new { area = "CallCenter" })" class="btn btn-default btn-navBarCallCenterLine mt5 w100"> @PresentationWebStrings.LogOut <i class="icon-remove"></i></a>
                                    </li>
                                }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

