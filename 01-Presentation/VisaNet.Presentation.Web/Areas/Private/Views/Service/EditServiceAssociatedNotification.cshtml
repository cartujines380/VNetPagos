@{
    ViewBag.Title = "Associate";
}

@using VisaNet.Common.Resource.Presentation
@model VisaNet.Presentation.Web.Areas.Private.Models.ServiceAssociateNotificationModel
<div class="container p25t">
    <div class="wizardBox">
        <!-- area de titulo y breadcrumb-->
        <div class="row">
            <div class="col-md-8">
                <h3 class="mt5">@PresentationWebStrings.Service_Step2_Title</h3>
                <h5 class="pageDescription"><i class="icon-exclamation-sign visanetOrangeTxt"></i> @PresentationWebStrings.Service_Step2_Desc</h5>
            </div>
            <div class="col-md-4">
                @Html.Partial("_StepsEdit")
            </div>
            <div class="clearfix"></div>
            <div class="horizontalLineGrey"></div>
        </div>
        <!-- area de datos seleccionados -->
        @using (Html.BeginForm("EditServiceAssosiated", "Service", FormMethod.Post, new Dictionary<string, object> { { "id", "form" } }))
        {
            <div class="highlightArea">
                <h3><i class="icon-angle-right"></i> @PresentationWebStrings.Data_Still_Now</h3>
                <label><i class="icon-angle-right lightBlue"></i> @PresentationWebStrings.Service <span>@Model.ServiceName</span> </label>
                @Html.HiddenFor(m => m.ServiceName)
                @if (!String.IsNullOrEmpty(Model.ReferenceName) && !String.IsNullOrEmpty(Model.ReferenceValue))
                {
                    <label><i class="icon-angle-right lightBlue"></i> @Model.ReferenceName: <span>@Model.ReferenceValue</span></label>
                }
                @if (!String.IsNullOrEmpty(Model.ReferenceName2) && !String.IsNullOrEmpty(Model.ReferenceValue2))
                {
                    <label><i class="icon-angle-right lightBlue"></i> @Model.ReferenceName2: <span>@Model.ReferenceValue2</span></label>
                }
                @if (!String.IsNullOrEmpty(Model.ReferenceName3) && !String.IsNullOrEmpty(Model.ReferenceValue3))
                {
                    <label><i class="icon-angle-right lightBlue"></i> @Model.ReferenceName3: <span>@Model.ReferenceValue3</span></label>
                }
                @if (!String.IsNullOrEmpty(Model.ReferenceName4) && !String.IsNullOrEmpty(Model.ReferenceValue4))
                {
                    <label><i class="icon-angle-right lightBlue"></i> @Model.ReferenceName4: <span>@Model.ReferenceValue4</span></label>
                }
                @if (!String.IsNullOrEmpty(Model.ReferenceName5) && !String.IsNullOrEmpty(Model.ReferenceValue5))
                {
                    <label><i class="icon-angle-right lightBlue"></i> @Model.ReferenceName5: <span>@Model.ReferenceValue5</span></label>
                }
                @if (!String.IsNullOrEmpty(Model.ReferenceName6) && !String.IsNullOrEmpty(Model.ReferenceValue6))
                {
                    <label><i class="icon-angle-right lightBlue"></i> @Model.ReferenceName6: <span>@Model.ReferenceValue6</span></label>
                }
            </div>

            <!-- area de titulo y breadcrumb-->

            @Html.AntiForgeryToken()
            
            @Html.HiddenFor(m => m.SuccessPaymentActive)
            @Html.HiddenFor(m => m.NewBillActive)
            @Html.HiddenFor(m => m.DaysBeforeDueDateConfigActive)
            @Html.HiddenFor(m => m.ExpiredBillActive)
            @Html.HiddenFor(m => m.FailedAutomaticPaymentActive)

            <div class="formMargin">
                <div class="tableBox mt20">
                    <div class="row" style="background-color: #f9f9f9; padding-top: 5px; padding-bottom: 5px">
                        <div class="col-xs-9">
                            <h4>@PresentationWebStrings.Service_Step2_TypeNotification</h4>
                        </div>
                        <div class="col-xs-3">
                            <h4>@PresentationWebStrings.Service_Step2_Email</h4>
                        </div>
                    </div>
                    @if (Model.NewBillActive)
                    {
                        <div class="row" style="background-color: #fff; padding-top: 5px; padding-bottom: 5px">
                            <div class="col-xs-9" style="font-family: seguisb, arial; font-size: 12px; color: #575757">
                                @PresentationWebStrings.Service_Step2_BillMade
                            </div>
                            <div class="col-xs-3">
                                @Html.CheckBoxFor(s => s.NewBillEmail)
                            </div>
                        </div>
                    }
                    @if (Model.DaysBeforeDueDateConfigActive)
                    {
                        <div class="row" style="background-color: #f9f9f9; padding-top: 5px; padding-bottom: 5px">
                            <div class="col-xs-9" style="font-family: seguisb, arial; font-size: 12px; color: #575757">
                                @PresentationWebStrings.Service_Step2_BillExpiration
                            </div>
                            <div class="col-xs-3">
                                @Html.CheckBoxFor(s => s.DaysBeforeDueDateConfigEmail)
                            </div>
                        </div>
                        <div class="row" style="background-color: #f9f9f9; padding-top: 5px; padding-bottom: 5px">
                            <div class="col-xs-12" style="font-family: seguisb, arial; font-size: 12px; color: #575757">
                                <i class="icon-magic mr5"></i> @PresentationWebStrings.Service_Step2_Notify
                                @Html.TextBoxFor(m => m.DaysBeforeDueDate, new Dictionary<string, object>() { { "class", "w10 notificationInput numeric" }, { "placeholder", "Ej:4" }, { "maxlength", "1" }, { "style", "width:8%" } })
                                @PresentationWebStrings.Service_Step2_Notify_Second_Line
                                @Html.ValidationMessageFor(model => model.DaysBeforeDueDate)
                            </div>
                        </div>
                    }
                    @if (Model.ExpiredBillActive)
                    {
                        <div class="row" style="background-color: #fff; padding-top: 5px; padding-bottom: 5px">
                            <div class="col-xs-9" style="font-family: seguisb, arial; font-size: 12px; color: #575757">
                                @PresentationWebStrings.Service_Step2_BillExpired
                            </div>
                            <div class="col-xs-3">
                                @Html.CheckBoxFor(s => s.ExpiredBillEmail)
                            </div>
                        </div>
                    }
                    <div class="row" style="background-color: #f9f9f9; padding-top: 5px; padding-bottom: 5px">
                        <div class="col-xs-9" style="font-family: seguisb, arial; font-size: 12px; color: #575757">
                            @PresentationWebStrings.Service_Step2_PaymentMade
                        </div>
                        <div class="col-xs-3">
                            @Html.CheckBoxFor(s => s.SuccessPaymentEmail)
                        </div>
                    </div>

                    @*POR EL MOMENTO SE VAN A NOTIFICAR SIEMPRE*@
                    @*
                    <div class="row" style="background-color: #fff; padding-top: 5px; padding-bottom: 5px">
                        <div class="col-xs-9" style="font-family: seguisb, arial; font-size: 12px; color: #575757">
                            @PresentationWebStrings.Service_Step2_FailedAutomaticPayment
                        </div>
                        <div class="col-xs-3">
                            @Html.CheckBoxFor(s => s.FailedAutomaticPaymentEmail)
                        </div>
                    </div>*@

                    </div>
                </div>
            <!-- fin del formMargin-->

            <!-- botones del wizard-->
                <div class="row wizardButtons">
                    <div class="col-md-8"></div>
                    <div class="col-md-4">
                        <div class="col-xs-6 p5r pl0">
                            <a href="@Url.Action("BackEditServiceAssosiated")" class="btn btn-default btn-anterior mt10 w100"><i class="icon-chevron-sign-left"></i> @PresentationWebStrings.Before</a>
                        </div>
                        <div class="col-xs-6 p5l pr0">
                            <a id="btnNext" href="#" class="btn btn-default btn-siguiente mt10 w100"> @PresentationWebStrings.Save <i class="icon-edit"></i></a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            <!-- fin botones del wizard-->
        }

    </div>
    <div class="row">
        <div class="col-md-2">
            <button class="btn btn-default btn-cancelar mt10 w100" id="btnCancelPayment">@PresentationWebStrings.Cancel_Edit <i class="icon-remove"></i></button>
        </div>
    </div>

    @Html.Partial("_CancelEdition")
    @Html.Partial("_ConfirmEdition")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#servicesLink").addClass("vnpTitleSelected");
        $(".numeric").numeric();
        $("#stepNotification").addClass("active");

        $("#btnNext").click(function () {
            $("#lbConfirmPayment").modal();
        });

        $("#btnCancelPayment").click(function () {
            $("#lbCancelPayment").modal({
                onShow: function () {
                    $("#btnCancel").click(function () {
                        window.location.replace('@Url.Action("Index", "Dashboard")');
                    });
                }
            });
        });

        $("#btnConfirm").click(function (e) {
            e.preventDefault();
            $("#form").submit();
        });
    });
</script>
