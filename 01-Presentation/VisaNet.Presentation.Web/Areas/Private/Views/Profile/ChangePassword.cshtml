@using VisaNet.Common.Resource.Presentation
@model VisaNet.Presentation.Web.Models.ChangePasswordModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

@using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { id = "frmSubmit", @Class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="container p25t">
        <div class="pageBox mb20">
            <div class="formMargin">
                <h4 class="lightBlue">@PresentationCoreMessages.Security_ChangePassword</h4>
                <div class="horizontalLineWhite"></div>
                <!-- campos obligatorios -->
                <h5><i class="icon-exclamation-sign visanetOrangeTxt"></i> @PresentationWebStrings.Required_First_Line <i class="icon-asterisk visanetOrangeTxt obligatoryField"></i>@PresentationWebStrings.Required_Second_Line</h5>
                <!-- campos obligatorios -->
                <div class="row">
                    <div class="col-md-6">
                        <label>@PresentationWebStrings.Profile_Email</label>
                        @Html.TextBox("Email", (string)ViewBag.Email, new { @class = "form-control", @disabled = "disabled" })

                        @Html.LabelFor(p => p.OldPassword) <i class="icon-asterisk visanetOrangeTxt obligatoryField"></i>
                        @Html.PasswordFor(p => p.OldPassword, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(p => p.OldPassword)

                        @Html.LabelFor(p => p.NewPassword) <i class="icon-asterisk visanetOrangeTxt obligatoryField"></i>
                        @Html.PasswordFor(p => p.NewPassword, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(p => p.NewPassword)

                        @Html.LabelFor(p => p.ConfirmPassword) <i class="icon-asterisk visanetOrangeTxt obligatoryField"></i>
                        @Html.PasswordFor(p => p.ConfirmPassword, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(p => p.ConfirmPassword)
                    </div>
                </div>
            </div>
        </div>
        <div class="row buttonsActionsBox">
            <div class="col-md-4 pl0 pr0">
                <div class="col-xs-6  pr0 pl0">
                    <a href="@Url.Action("Index","Profile")" class="btn btn-default btn-cancelar mt10 w100" role="button">@PresentationCoreMessages.Common_Cancel<i class="icon-remove"></i> </a>
                </div>
                <div class="col-xs-6 p5l pr0">
                    <button type="submit" id="btnSend" class="btn btn-default btn-action mt10 w100 lbApprove">@PresentationCoreMessages.Common_Accept<i class="icon-ok"></i></button>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#profileLink").addClass("vnpTitleSelected");
        $("#frmSubmit").submit(function () {
            if ($("#frmSubmit").valid()) { showLoaderFullScreen(); }
        });
    });
</script>