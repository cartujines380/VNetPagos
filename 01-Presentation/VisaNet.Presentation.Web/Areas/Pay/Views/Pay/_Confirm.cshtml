@using VisaNet.Common.Resource.Presentation

<div id="lbConfirmPayment" class="modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <div class="row">
                    <div class="col-xs-5">
                        <a class="brandVisaNet fLeft" href="/"> </a>
                    </div>
                    <div class="col-xs-6"><a class="brandVisa fRight"></a></div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-body">
                <h4 class="modal-title">@PresentationWebStrings.Payment_Confirm</h4>
                <div><h4 class="visaTextBlue">@PresentationWebStrings.Payment_Service <span id="lblPaymentService" class="ml10"></span></h4></div>
                <table class="tableConfirmStyle table">
                    <tr>
                        <td style="border-top:0px">@PresentationWebStrings.Payment_Total_Bills: </td>
                        <td style="border-top:0px"  id="lblPaymentTotalBills" class="alignRight">$0</td>
                    </tr>
                    <tr id="discountrowid">
                        <td style="border-top:0px" id="lblPaymentDiscountType"></td>
                        <td style="border-top:0px" id="lblPaymentDiscountAmount" class="alignRight discount"></td>
                    </tr>
                    @*<tr><td>@PresentationWebStrings.Payment_Financial_Inclusion: </td><td id="lblPaymentFinancialInclusion" class="alignRight discount">$0</td></tr>*@
                    <tr>
                        <td style="border-top:0px">@PresentationWebStrings.Payment_Total_After_Discount:</td>
                        <td style="border-top:0px" id="lblPaymentTotalAfterDiscount" class="alignRight sum">$0</td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-xs-6 p5r">
                        <button type="button" class="btn btn-default btn-cancelar w100" data-dismiss="modal">@PresentationCoreMessages.Common_Cancel <i class="icon-remove"></i></button>
                    </div>
                    <div class="col-xs-6 p5l">
                        <button type="button" id="btnConfirm" class="btn btn-default btn-siguiente w100">@PresentationWebStrings.Payment_Pay <i class="icon-chevron-sign-right"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
