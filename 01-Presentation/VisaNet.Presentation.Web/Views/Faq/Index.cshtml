@using System.Web.Mvc.Html
@model IEnumerable<VisaNet.Presentation.Web.Models.FaqModel>

<div class="container p25t">
    <div class="row asdasds">
        <div class="col-md-8">
            <h3 class="mt5 nameSection">Preguntas Frecuentes</h3>
        </div>
        <div class="clearfix"></div>
        <div class="horizontalLineGrey"></div>
    </div>
    <div class="pageBox mb20">
        <div class="pageFormat">
            <div class="formMargin faqPage">
                @foreach (var item in Model.OrderBy(f => f.Order))
                {
                    <h4 class="upDownControler">
                        <a>
                            <i class="icon-chevron-up hide"></i>
                            <i class="icon-chevron-down "></i>
                            @Html.DisplayFor(modelItem => item.Question)
                        </a>
                    </h4>
                    <div style="display: none">
                        @Html.DisplayFor(modelItem => item.Answer)
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#faqLink").addClass("vnpTitleSelected");
        $(".upDownControler").click(function () {
            $(this).next("div").toggle("slow");
            if ($("i.icon-chevron-up", this).hasClass("hide")) {
                $("i.icon-chevron-down", this).addClass("hide");
                $("i.icon-chevron-up", this).removeClass("hide");
            } else {
                $("i.icon-chevron-up", this).addClass("hide");
                $("i.icon-chevron-down", this).removeClass("hide");
            }
        });
    });
</script>